		},800);
		
		setTimeout(function(){
		$(".page1_t2").addClass("animated zoomInDown").show();
		},1000);
		
		setTimeout(function(){
		$(".page1_t3").addClass("animated zoomInDown").show();
		},1400);
		setTimeout(function(){
		$(".page1_left").addClass("animated fadeInUp").show();
		},1800);
		setTimeout(function(){
		$(".page1_right").addClass("animated fadeInUp").show();
		},1800);
		setTimeout(function(){
		$("#to_index").addClass("animated bounceIn")
		.show()
		.mouseover(function(){$(this).animate({top:'20px'},200)})
		.mouseout(function(){$(this).animate({top:'30px'},200)});
		},800);
		
	})
	setInterval(function(){
	$(function(){
