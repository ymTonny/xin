$(function(){

		$(".page1_bg").addClass("animated rollIn").show();
         setTimeout(function(){
		$(".page1_cxx").addClass("animated bounceInLeft").show();
		
		},500);

        setTimeout(function(){
		$(".page1_cc").addClass("animated bounceInRight").show();
		
		},500);

		setTimeout(function(){
